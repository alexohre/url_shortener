<div class="container-xxl flex-grow-1 container-p-y">
	<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Settings /</span> Account</h4>
	<div class="row">
		<div class="col-md-12">
			<div class="card mb-4">
				<h5 class="card-header">Profile Details</h5>
				<div class="card-body">
					<div class="d-flex align-items-start align-items-sm-center gap-4" data-controller="previews">
						<% if current_account.avatar.present? %>
							<%= image_tag(current_account.avatar.variant(resize_to_fill: [200, 200]),  class: "d-block rounded", height: 200, width: 200, id: "uploadAvatar", alt: "account-avatar") %>
						<% else %>
							<%= image_tag "img/avatars/1.png", alt: "account-avatar", class: "d-block rounded", height: 200, width: 200  %>
						<% end %>
					</div>
				</div>
				<hr class="my-0">
				<div class="card-body">
					<div class="row">
						<div class="mb-3 col-md-6">
							<strong>First Name:</strong> <%= current_account.first_name.present? ? current_account.first_name : "NIL" %>
						</div>
						<div class="mb-3 col-md-6">
							<strong>Last Name:</strong> <%= current_account.last_name.present? ? current_account.last_name : "NIL" %>
						</div>
						<div class="mb-3 col-md-6">
							<strong>Email:</strong> <%= current_account.email.present? ? current_account.email : "NIL" %>
						</div>
						<div class="mb-3 col-md-6">
							<strong>Username:</strong> <%= current_account.username.present? ? current_account.username : "NIL" %>
						</div>
						<div class="mb-3 col-md-6">
							<strong>Phone Number:</strong> <%= current_account.phone_number.present? ? current_account.phone_number : "NIL" %>
						</div>
						<div class="mb-3 col-md-6">
							<strong>Address:</strong> <%= current_account.address.present? ? current_account.address : "NIL" %>
						</div>
						<div class="mb-3 col-md-6">
							<strong>State:</strong> <%= current_account.state.present? ? current_account.state : "NIL" %>
						</div>
						<div class="mb-3 col-md-6">
							<strong>Zip Code:</strong> <%= current_account.zip_code.present? ? current_account.zip_code : "NIL" %>
						</div>
						<div class="mb-3 col-md-6">
							<strong>Country:</strong> <%= current_account.country.present? ? current_account.country : "NIL" %>
						</div>
						<div class="mb-3 col-md-6">
							<strong>Date of Birth:</strong> <%= current_account.date_of_birth.present? ? current_account.date_of_birth : "NIL" %>
						</div>
						<div class="mb-3 col-md-6">
							<strong>Gender:</strong> <%= current_account.gender.present? ? current_account.gender : "NIL" %>
						</div>
					</div>
				</div>
			</div>
			<div class="card">
				<h5 class="card-header">Delete Account</h5>
				<div class="card-body">
					<div class="mb-3 col-12 mb-0">
						<div class="alert alert-warning">
							<h6 class="alert-heading fw-bold mb-1">Are you sure you want to delete your account?</h6>
							<p class="mb-0">Once you delete your account, there is no going back. Please be certain.</p>
						</div>
					</div>
					<div class="form-check mb-3">
						<input class="form-check-input" type="checkbox" name="accountActivation" id="accountActivation">
						<label class="form-check-label" for="accountActivation">I confirm my account deactivation</label>
					</div>
					<%= button_to "Delete my Account",  registration_path(@resource_name), class: "btn btn-danger deactivate-account", data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %>
				</div>
			</div>
		</div>
	</div>
</div>
